{
	"compilerOptions": {
		"lib": ["es2020"],
		"module": "CommonJS",
		"target": "es2020",

		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "build",
        "moduleResolution": "node"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}